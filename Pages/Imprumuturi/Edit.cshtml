@page
@model Nechita_Carina_Proiect.Pages.Imprumuturi.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifica</h1>

<h4>Imprumut</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Imprumut.ID" />
            <div class="form-group">
                <label asp-for="Imprumut.data_inceput" class="control-label"></label>
                <input asp-for="Imprumut.data_inceput" class="form-control" />
                <span asp-validation-for="Imprumut.data_inceput" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imprumut.data_final" class="control-label"></label>
                <input asp-for="Imprumut.data_final" class="form-control" />
                <span asp-validation-for="Imprumut.data_final" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imprumut.durata" class="control-label"></label>
                <input asp-for="Imprumut.durata" class="form-control" />
                <span asp-validation-for="Imprumut.durata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imprumut.suma_imprumutata" class="control-label"></label>
                <input asp-for="Imprumut.suma_imprumutata" class="form-control" />
                <span asp-validation-for="Imprumut.suma_imprumutata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imprumut.suma_datorata" class="control-label"></label>
                <input asp-for="Imprumut.suma_datorata" class="form-control" />
                <span asp-validation-for="Imprumut.suma_datorata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imprumut.ContID" class="control-label"></label>
                <select asp-for="Imprumut.ContID" class="form-control" asp-items="ViewBag.ContID"></select>
                <span asp-validation-for="Imprumut.ContID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imprumut.TipImprumutID" class="control-label"></label>
                <select asp-for="Imprumut.TipImprumutID" class="form-control" asp-items="ViewBag.TipImprumutID"></select>
                <span asp-validation-for="Imprumut.TipImprumutID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salveaza modificarile" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Inapoi la lista creditelor</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
